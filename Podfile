  pod 'TSMessages', git: 'https://github.com/KrauseFx/TSMessages.git', commit: '7ef3990de3c626e8f3e50bfabb53f76997e374ce'


  target 'HackerNewsTests' do
    inherit! :search_paths
    # Pods for testing
  end

end